<h3 class="ui header">{{t "forms.i-i-s-stomatologiya-материал-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.кодМатериала
      class=(if (v-get validationModel "кодМатериала" "isInvalid") "error")
      label=(t "forms.i-i-s-stomatologiya-материал-e.кодМатериала-caption")
      data-test-i-i-s-stomatologiya-материал-e-кодМатериала=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "кодМатериала" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.наименование
      class=(if (v-get validationModel "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-stomatologiya-материал-e.наименование-caption")
      data-test-i-i-s-stomatologiya-материал-e-наименование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "наименование" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-stomatologiya-материал-e.производитель-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.производитель
      displayAttributeName="наименование"
      autocomplete=true
      relationName="производитель"
      projection="ПроизводительL"
      title=(t "forms.i-i-s-stomatologiya-материал-e.производитель-caption")
      readonly=readonly
      componentName="производительLookup"
      class=(if (v-get validationModel "производитель" "isInvalid") "error")
      data-test-i-i-s-stomatologiya-материал-e-производитель=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "производитель" "message")}}
  </div>
</form>
